{
  "name": "@wcom/cli",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Rahim Alwer <rahim_alwer@outlook.com>",
  "description": "CLI tool to transform and distribute your web component library.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "@types/",
  "homepage": "https://github.com/wcom-js/cli",
  "bugs": {
    "url": "https://github.com/wcom-js/cli/issues"
  },
  "bin": {
    "wcom": "cli.js"
  },
  "files": [
    "cli.js",
    "dist/",
    "@types/"
  ],
  "scripts": {
    "build": "rimraf dist && rimraf @types && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module es2015 --outDir dist/esm",
    "build:watch": "npm run build:cjs -- --watch",
    "lint": "eslint ./src --quiet --fix --ignore-path .gitignore",
    "release": "npx semantic-release --branches main"
  },
  "peerDependencies": {
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "execa": "^5.0.0",
    "fast-glob": "^3.2.4",
    "kleur": "^4.1.3",
    "normalize-path": "^3.0.0",
    "read-pkg-up": "^7.0.1",
    "semver": "^5.7.1",
    "yargs": "^16.1.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.16",
    "@types/normalize-path": "^3.0.0",
    "@types/semver": "^7.3.4",
    "@types/yargs": "^15.0.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "lit-element": "^2.4.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.0"
  },
  "keywords": [
    "wcom",
    "web-components",
    "cli",
    "analyzer",
    "transformer",
    "documentation",
    "lit-element",
    "docs",
    "json",
    "vscode",
    "types",
    "typescript",
    "markdown",
    "wrapper",
    "generator",
    "react",
    "vue",
    "angular",
    "svelte"
  ],
  "publishConfig": {
    "access": "public"
  }
}
